{
  "expo": {
    "name": "Refilla",
    "slug": "refilla",
    "scheme": "refilla",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/refilla-app-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/refilla-app-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.iwc3.refilla"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "refilla-app-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/station-icon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Refilla to use your location"
        }
      ],
      "expo-sqlite"
    ]
  }
}
